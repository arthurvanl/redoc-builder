{
  "compilerOptions": {
      "lib": [
          "ESNext"
      ],
      "module": "esnext",
      "target": "esnext",
      "moduleResolution": "bundler",
      "moduleDetection": "force",
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "composite": false,
      "strict": true,
      "downlevelIteration": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "paths": {
          "@/*": [
              "./src/*"
          ]
      },
      "allowJs": true,
      "types": [
          "bun-types" // add Bun global
      ]
  }
}